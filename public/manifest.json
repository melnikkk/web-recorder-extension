{
  "manifest_version": 3,
  "name": "Web Recorder",
  "description": "Chrome based web video recorder.",
  "version": "1.0.0",
  "host_permissions": ["https://*/*"],
  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": ["content-scripts/content.js"]
  }],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  }
 }